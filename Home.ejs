            <li><a href="/contato">FALE CONOSCO</a></li>
        </ul>
    </nav>
</form>
</div>
<div align="center" class="principal">
    <div style="border: 2px; border-color: #1c73af; width: 500px; height: 400px">
        <img src="http://isuba1-a.akamaihd.net/produtos/01/00/item/124506/4/124506450G1.jpg">
        <h2 style="background-color: #363636">Post Teste</h2>
    </div>

    <%for (var i=0 ; i < posts.length; i++){%>
    <%=posts[i].imagem%>
