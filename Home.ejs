</div>

<div class="rodape">
    dsadsa
</div>
<script type="text/javascript">
    var x;
    var muda = document.getElementById("mudacor");

    var x = 1;
    function change() {

        var bg = document.getElementById("mudacor");



        if (x == 1) {
            bg.style.color = "#6694ff";
            x = x + 1;
        }
        else if (x == 2) {
